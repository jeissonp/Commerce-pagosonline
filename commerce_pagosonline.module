    '#default_value' => isset($settings['pagosonline_uid']) ? $settings['pagosonline_uid'] : 2,
    '#required' => TRUE,
  );
  $form['pagosonline_encryption_key'] = array(
    '#title' => t('Encryption key'),
    '#type' => 'textfield',
    '#default_value' => isset($settings['pagosonline_encryption_key']) ? $settings['pagosonline_encryption_key'] : '1111111111111111
',
    '#size' => 50,
    '#required' => TRUE,
  );
  $form['pagosonline_action_url'] = array(
    '#title' => t('Path Form Action'),
    '#type' => 'textfield',
    '#size' => 50,
    '#default_value' => isset($settings['pagosonline_action_url']) ? $settings['pagosonline_action_url'] : PO_URL_SERVER,
    '#required' => TRUE,
  );
  $form['pagosonline_action_url_test'] = array(
    '#title' => t('Test Path Form Action'),
    '#type' => 'textfield',
    '#size' => 50,
    '#default_value' => isset($settings['pagosonline_action_url_test']) ? $settings['pagosonline_action_url_test'] : PO_URL_SERVER_TEST,
    '#required' => TRUE,
  );
  $form['pagosonline_testing'] = array(
    '#title' => t('Test Enabled'),
    '#type' => 'select',
    '#options' => array(
      '0' => t('No'),
      '1' => t('Yes'),
    ),
    '#default_value' => isset($settings['pagosonline_testing']) ? $settings['pagosonline_testing'] : 1,
  );
  return $form;
}

